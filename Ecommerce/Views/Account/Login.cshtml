@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
    <head>

    <meta name="viewport" content="width=device-width" />
    <title>Login Page</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.2/themes/base/jquery-ui.css">
    <link href="~/Content/JQueryUi/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/JQueryUi/jquery-ui.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous">
        
    </script>
    <script src="~/js/controller/accountcontroller.js"></script>
    <script src="~/js/service/accountservice.js"></script>

    </head>
    <body>
        <div style="width:350px;height:500px;border:2px solid #0094ff;position:absolute;top:0px;left:0px;right:0px;bottom:0px;margin:auto;margin-top:5rem">
            <div class="content">
                <div class="row" style="text-align:center;padding:5px 0px">
                    <div class="col col-sm-12">
                        <h2>Login</h2>
                    </div>

                </div>
                <div class="row">
                    <div class="col col-sm-2">
                    </div>
                    <div class="col col-sm-8">
                        Username
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-2">
                    </div>
                    <div class="col col-sm-8">
                    
                        <input type="text" id="txtUserName" style="width:100%" />
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-2">
                    </div>
                    <div class="col col-sm-8">
                        Password
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-2">
                    </div>
                    <div class="col col-sm-8">
                      
                        <input type="text" id="txtPassword" placeholder="requered" style="width:100%" />
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-2">
                    </div>
                    <div class="col col-sm-8">
                    <input type="submit" id="btnLogin" value="Login" name="btnSubmit" style="width:100%" onclick="javascript:AccountController.VerifyUser(this,'@Url.Action("Index","Product")')" />
                        <input type="submit" id="btnReset" value="Reset" name="btnSubmit" style="width:100%" />
                        <input type="submit" id="btnForgetPassword" value="Forget Password" name="btnSubmit" style="width:100%" />

                    </div>
            
                </div>

            </div>

        </div>
    </body>
</html>
